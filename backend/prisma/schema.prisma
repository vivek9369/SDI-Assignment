// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  name      String
  avatar    String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  scheduledEmails ScheduledEmail[]
  senders         Sender[]

  @@map("users")
}

model Sender {
  id        String     @id @default(cuid())
  userId    String
  email     String
  name      String
  createdAt DateTime   @default(now())

  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  scheduledEmails ScheduledEmail[]

  @@unique([userId, email])
  @@map("senders")
}

model ScheduledEmail {
  id              String     @id @default(cuid())
  userId          String
  senderId        String
  recipientEmail  String
  subject         String
  body            String
  scheduledTime   DateTime
  sentTime        DateTime?
  status          String     @default("scheduled") // scheduled, sent, failed
  failureReason   String?
  bullJobId       String?
  batchId         String?    // Group multiple emails sent in one request
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  sender Sender @relation(fields: [senderId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([scheduledTime])
  @@index([batchId])
  @@map("scheduled_emails")
}

model EmailBatch {
  id            String     @id @default(cuid())
  userId        String
  subject       String
  body          String
  recipients    String[]   // Array of emails
  startTime     DateTime
  delayMs       Int
  hourlyLimit   Int
  createdAt     DateTime   @default(now())

  @@index([userId])
  @@map("email_batches")
}
